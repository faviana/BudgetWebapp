<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>BudgetServlet</servlet-name>
    <servlet-class>com.ironyard.servlet.BudgetServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>BudgetServlet</servlet-name>
    <url-pattern>/detail</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>BudgetSearchServlet</servlet-name>
    <servlet-class>com.ironyard.servlet.BudgetSearchServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>BudgetSearchServlet</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>

    <servlet>
        <servlet-name>BudgetStatServlet</servlet-name>
        <servlet-class>com.ironyard.servlet.BudgetStatServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BudgetStatServlet</servlet-name>
        <url-pattern>/summary</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BudgetCreateServlet</servlet-name>
        <servlet-class>com.ironyard.servlet.BudgetCreateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BudgetCreateServlet</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BudgetUpdateServlet</servlet-name>
        <servlet-class>com.ironyard.servlet.BudgetUpdateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BudgetUpdateServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BudgetSelectServlet</servlet-name>
        <servlet-class>com.ironyard.servlet.BudgetSelectServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BudgetSelectServlet</servlet-name>
        <url-pattern>/select</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BudgetDeleteServlet</servlet-name>
        <servlet-class>com.ironyard.servlet.BudgetDeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BudgetDeleteServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>


</web-app>
